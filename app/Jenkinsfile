pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'cd app/ && mvn -B -DskipTests clean install'
            }
        }
        /*stage('Test') {
            steps {
                sh 'cd app/ && mvn test'
            }
            post {
                always {
                    junit 'app/target/surefire-reports/*.xml'
                }
            }
        }*/
        /*
        stage('Static analysis'){
            steps {
                sh 'mvn mvn clean verify sonar:sonar'
            }
        }*/
        stage('Deliver') {
            agent any
                stages {
                    stage('Build image & Push'){
                        steps {
                            sh 'echo starting image build...'
                            sh 'cd app/'

                            script {
                                def image = docker.build("devallday/nozama:latest")
                                image.push()
                            }
                        }
                    }
                }
        }
    }

}
