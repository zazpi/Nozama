pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'cd app/ && mvn -B -DskipTests clean install'
            }
        }
        /*stage('Test') {
            steps {
                sh 'cd app/ && mvn test'
            }
            post {
                always {
                    junit 'app/target/surefire-reports/*.xml'
                }
            }
        }*/
        /*
        stage('Static analysis'){
            steps {
                sh 'mvn mvn clean verify sonar:sonar'
            }
        }*/
        stage('Deliver') {
            agent { label 'nozama_docker' }
                stages {
                    stage('Build') {
                        steps {
                            sh 'echo starting image build...'
                            sh 'cd app/ && docker build -t devallday/nozama:latest'
                        }
                    }
                    stage('Publish') {
                        steps {
                            withDockerRegistry([credentialsId: 'dockerhub_account', url: 'https://index.docker.io/v1/']) {
                                sh 'docker push devallday/nozama:latest'
                            }
                        }
                    }
              }
        }
    }

}
