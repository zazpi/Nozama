pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'cd app/ && mvn -B -DskipTests clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'cd app/ && mvn test'
            }
            post {
                always {
                    junit 'app/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Generate documentation') {
            steps {
                sh 'cd app/ && mvn doxygen:generate'
            }
        }
        stage('Build image and Deliver') {
            steps {
                sh 'cd app/ && mvn dockerfile:build'
            }
        }
    }
}
