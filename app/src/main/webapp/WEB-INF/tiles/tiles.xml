<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
   "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
   "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- Templates -->

	<definition name="layout.basic"
		template="/WEB-INF/tiles/layout/basic.jsp">
		<put-attribute name="title" value="Nozama" />
		<put-attribute name="header"
			value="/WEB-INF/tiles/view/header.jsp" />
		<put-attribute name="aside"
			value="/WEB-INF/tiles/view/aside.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/tiles/view/footer.jsp" />
	</definition>

	<!-- Pages -->

	<definition name="site.welcome" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/welcome.jsp" />
	</definition>
	
	<definition name="site.orderList" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/orderList.jsp" />
	</definition>
	
	<definition name="site.productList" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/productList.jsp" />
	</definition>
	
	<definition name="site.addProduct" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/addProduct.jsp" />
	</definition>

	<definition name="site.crud" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/crud.jsp" />
	</definition>

	<definition name="site.admin" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/admin.jsp" />
	</definition>

	<definition name="site.forbidden" extends="layout.basic">
		<put-attribute name="body"
			value="/WEB-INF/tiles/view/body/forbidden.jsp" />
	</definition>

</tiles-definitions>
